<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/ltRootContact"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true"
	android:background="?attr/selectableItemBackground">

	<androidx.cardview.widget.CardView
		android:id="@+id/cvContactAvatarHolder"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="8dp"
		app:cardBackgroundColor="@color/design_default_color_background"
		app:cardCornerRadius="28dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/ivContactAvatar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:scaleType="centerCrop"
			app:srcCompat="@drawable/ic_android" />
	</androidx.cardview.widget.CardView>

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvContactDisplayName"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:text="@string/app_name"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
		android:textColor="@color/colorLightGray"
		app:layout_constraintEnd_toStartOf="@+id/btnContactSyncDownload"
		app:layout_constraintStart_toEndOf="@+id/cvContactAvatarHolder"
		app:layout_constraintTop_toTopOf="@+id/cvContactAvatarHolder" />

	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvContactPhoneNumber"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="4dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:text="@string/app_name"
		android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
		android:textColor="@color/colorLightGray"
		app:layout_constraintEnd_toStartOf="@+id/btnContactSyncDownload"
		app:layout_constraintStart_toEndOf="@+id/cvContactAvatarHolder"
		app:layout_constraintTop_toBottomOf="@+id/tvContactDisplayName" />

	<androidx.appcompat.widget.AppCompatImageButton
		android:id="@+id/btnContactSyncDownload"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginEnd="16dp"
		android:layout_marginRight="16dp"
		android:background="?attr/selectableItemBackgroundBorderless"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_cloud_done"
		app:tint="@color/colorAccent" />

</androidx.constraintlayout.widget.ConstraintLayout>